<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
        
          <h4>Welcome {{username}}</h4>

          <h5 class="card-title">LOAD CARDS</h5>

          <ul>
            {{#each cards }}
            <p>Card id: {{dataValues.id}}</p>
            <p>Card number: {{dataValues.card_number}}</p>
            <canvas id="myChart" width="400" height="400"></canvas>
            {{/each}}
          </ul>
          
            <a href="/">‚Üê Back To Home</a>
            <a href="/addReceipt/{{{id}}}">Add Receipt</a>
        </div>
      </div>
    </div>
  </div>
</div>

